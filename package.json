{
  "name": "vscode-co-edit",
  "displayName": "vscode-co-edit",
  "description": "An AI academic writing co-pilot for VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:co-pilot.draftChapterPlan",
    "onCommand:co-pilot.checkSectionAgainstPlan",
    "onCommand:co-pilot.findRelevantCitations"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "co-pilot.draftChapterPlan",
        "title": "Co-Pilot: Draft Chapter Plan"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write src/**/*.ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.30.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  }
}
