{
  "name": "co-edit",
  "publisher": "gemini",
  "displayName": "Co-Edit",
  "description": "An AI academic writing co-pilot for VSCode.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/gemini/co-edit.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:co-pilot.draftChapterPlan",
    "onCommand:co-pilot.checkSectionAgainstPlan",
    "onCommand:co-pilot.findRelevantCitations",
    "onCommand:co-pilot.improveParagraph",
    "onCommand:co-pilot.setGeminiApiKey"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "co-pilot.draftChapterPlan",
        "title": "Co-Pilot: Draft Chapter Plan"
      },
      {
        "command": "co-pilot.improveParagraph",
        "title": "Co-Pilot: Improve Paragraph"
      },
      {
        "command": "co-pilot.setGeminiApiKey",
        "title": "Co-Pilot: Set Gemini API Key"
      }
    ],
    "configuration": {
      "title": "Co-Pilot Configuration",
      "properties": {
        "co-pilot.zotero.endpoint": {
          "type": "string",
          "default": "http://localhost:23119/better-bibtex/json-rpc",
          "description": "The URL of the Zotero Better BibTeX JSON-RPC endpoint."
        },
        "co-pilot.zotero.citationStyle": {
          "type": "string",
          "default": "apa",
          "description": "The default citation style to use for inserting citations (e.g., 'apa', 'mla', 'chicago')."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npx @vscode/vsce package --no-dependencies",
     "lint": "eslint src --ext ts",
     "format": "prettier --write src/**/*.ts",
     "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.29.0",
    "eslint": "^9.30.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1"
  }
}